<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ActivityPersonDetail">


        <Button
                android:id="@+id/btnVoltarItemDetail"
                android:background="@drawable/ic_arrow_back_black_24dp"

                android:layout_width="40dp"
                android:layout_height="40dp"/>

        <RelativeLayout
                android:layout_below="@id/btnVoltarItemDetail"
                android:background="@drawable/main_bk_element"
                android:layout_centerHorizontal="true"
                android:layout_width="380dp"
                android:layout_height="550dp">

            <TextView
                    android:layout_marginTop="20dp"
                    android:id="@+id/txtNameStatic"
                    android:text="Name"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtNameDinamic"
                    android:layout_below="@id/txtNameStatic"
                    android:background="@drawable/main_bk_element"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtPhoneStatic"
                    android:layout_below="@id/txtNameDinamic"
                    android:text="Phone"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtPhoneDinamic"
                    android:layout_below="@id/txtPhoneStatic"
                    android:background="@drawable/main_bk_element"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtCepStatic"
                    android:text="CEP"
                    android:layout_below="@id/txtPhoneDinamic"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtCepDinamic"
                    android:layout_below="@id/txtCepStatic"
                    android:background="@drawable/main_bk_element"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtAddressStatic"
                    android:layout_below="@id/txtCepDinamic"
                    android:text="Address"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/txtAddressDinamic"
                    android:layout_below="@id/txtAddressStatic"
                    android:background="@drawable/main_bk_element"
                    android:textSize="25dp"
                    android:textColor="#FFFFFF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </RelativeLayout>


</RelativeLayout>