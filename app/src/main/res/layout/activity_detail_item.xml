<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ActivityDetailItem">

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/btnVoltarList"
                android:background="@drawable/ic_arrow_back_black_24dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

        <TextView
                android:id="@+id/tvNameItemDetail"
                android:textSize="50dp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:layout_marginRight="40dp"
                android:textColor="#FFFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>


    <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/main_bk_element"
            android:layout_width="400dp"
            android:layout_height="500dp">

        <ImageView
                android:id="@+id/imageItemDetail"
                android:layout_centerHorizontal="true"
                android:layout_width="200dp"
                android:layout_height="200dp"/>

        <LinearLayout
                android:layout_below="@id/imageItemDetail"
                android:layout_marginTop="10dp"
                android:id="@+id/ll1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Borrow Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:id="@+id/txtBorrowDate"
                    android:textSize="20dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/main_bk_element"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
                android:layout_below="@id/ll1"
                android:layout_marginTop="10dp"
                android:id="@+id/ll2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:text="Return Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:id="@+id/txtReturnDate"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/main_bk_element"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/txtBorrowedFrom"
                android:layout_below="@id/ll2"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="Borrowed from:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:clickable="true"
                android:textColor="#FFFFFF"
                android:id="@+id/txtNamePerson"
                android:textSize="20dp"
                android:layout_below="@id/txtBorrowedFrom"
                android:background="@drawable/main_bk_element"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>